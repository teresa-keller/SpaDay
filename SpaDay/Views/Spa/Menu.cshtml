<h1>Fancy Spa</h1>
<div id="clientProfile">
    <h3>Client profile</h3>
    <p>@ViewBag.name</p>
</div>
<div id="servicesMenu">

    <h5>Facial Treatments</h5>
    <p>@ViewBag.skintype skin type is best suited to the follow facial types:</p>

    <ul>
        @foreach (string facial in ViewBag.appropriateFacials)
        {
            <li>@facial</li>
        }

    </ul>

    <h5>Nail Services</h5>
    @if (ViewBag.manipedi == "mani")
    {
        <label>Manicure: </label>
        <p>@ViewBag.manicure</p>
    }
    else if (ViewBag.manipedi == "pedi")
    {
        <label>Pedicure: </label>
        <p>@ViewBag.pedicure</p>
    }
    else if (ViewBag.manipedi == "both")
    {
        <label>Manicure: </label>
        <p>@ViewBag.manicure</p>
        <label>Pedicure: </label>
        <p>@ViewBag.pedicure</p>
    }

</div>
